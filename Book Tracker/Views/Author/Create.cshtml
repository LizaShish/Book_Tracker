@model Book_Tracker.Models.CreateAuthorDTO
<div class="container">
    <h1>Добавить нового автора</h1>
    <!-- Укажите asp-action, чтобы отправить форму на действие Create контроллера Author -->
    <form asp-action="Create">
        
        <div class="form-group">
            <label for="Name">Автор</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Введите имя автора">
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Дата рождения</label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        
        <h1></h1>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>

