
@model IEnumerable<Book_Tracker.Models.BookDTO>


    <h2>Список книг</h2>

<!-- Форма поиска и фильтрации -->

    <form asp-action="Index" method="get">
        <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Введите название книги или автора" />
        </div>
        <h1></h1>
        <button type="submit" class="btn btn-primary">Поиск</button>


</form>
@if (!Model.Any())
{
    <p class="text-danger">Книги не найдены по вашему запросу.</p>
}

<div class="pagination-right">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize" title="Предыдущая страница">&#x2B05;</a>
        @Html.Raw("&nbsp;")
    }

    <span>Страница @ViewBag.CurrentPage из @ViewBag.TotalPages</span>

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        @Html.Raw("&nbsp;")
        <a href="?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize" title="Следующая страница"> &#x27A1;</a>
    }

</div>

<div class="total-books-container">
    <span class="Dj">
        <span><span class="ts">@ViewBag.StartBook</span>–<span class="ts">@ViewBag.EndBook</span></span> из <span class="total-books">@ViewBag.TotalBooks</span>
        </span>
</div>
<!--<span> (Всего книг: <span class="total-books">@ViewBag.TotalBooks</span>)</span> 
<span class="Dj"><span><span class="ts">1</span>–<span class="ts">10</span></span> из <span class="total-books">@ViewBag.TotalBooks</span></span>-->

<!-- Таблица со списком книг -->
    <table class="table m-3">
        <thead>
            <tr>
            <th class="center-align">Название</th>
            <th class="center-align">Автор</th>
            <th class="center-align">Прочитано</th>
            <th class="center-align">Действия</th>
            <th class ="center-align">Избранное </th>
            <th class="center-align">Файл загрузки </th>
               <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.AuthorName</td>
                <td>@(item.IsRead ? "Да" : "Нет")</td>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-3">Редактировать</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary me-3 ">Удалить</a>
                       
                    </div>
                </td>

                <td style="text-align: center;">
                        @if (item.IsFavorite)
                        {
                        <a asp-action="MarkAsFavorite" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="fas fa-heart-broken"></i> Убрать из избранного
                        </a>
                        }
                        else
                        {
                        <a asp-action="MarkAsFavorite" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="fas fa-heart"></i> Добавить в избранное
                        </a>
                        }

                 </td>


               <td>
                    @if (!string.IsNullOrEmpty(item.FilePath) && System.IO.File.Exists(Directory.GetCurrentDirectory() + "\\wwwroot" + item.FilePath))
                    {
                        <a asp-action="DownloadFile" asp-route-id="@item.Id" class="btn btn-success">Скачать</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>Файл не загружен</button>
                    }
            </td> 
            </tr>
        }
        </tbody>
    </table>
<div class="pagination-right">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize" title="Предыдущая страница">&#x2B05;</a>
        @Html.Raw("&nbsp;")
    }

    <span>Страница @ViewBag.CurrentPage из @ViewBag.TotalPages</span>

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        @Html.Raw("&nbsp;")
        <a href="?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize" title="Следующая страница"> &#x27A1;</a>
    }

    
    <div class="go-up">
        <a href="#top" title="Наверх">
            <i class="fas fa-arrow-up"></i> Наверх
        </a>
    </div>
   
</div>
