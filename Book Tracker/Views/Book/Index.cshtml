@model IEnumerable<Book_Tracker.Models.Book>

    <h2>Список книг</h2>

<!-- Форма поиска и фильтрации -->

    <form asp-action="Index" method="get">
        <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Введите название книги или автора" />
        </div>
        <h1></h1>
        <button type="submit" class="btn btn-primary">Поиск</button>


    <!-- Выпадающий список для фильтрации по статусу
    <div class="form-group">
        <label for="bookStatus">Фильтр по статусу:</label>
        <select name="bookStatus" class="form-control">
            <option value="">Все</option>
            <option value="Прочитано" @(ViewData["CurrentStatus"]?.ToString() == "Прочитано" ? "selected" : null)>Прочитано</option>
            <option value="Не прочитано" @(ViewData["CurrentStatus"]?.ToString() == "Не прочитано" ? "selected" : "")>Не прочитано</option>
            </select>
    </div> 
    <button type="submit" class="btn btn-primary">Применить фильтр</button> -->
</form>
@if (!Model.Any())
{
    <p class="text-danger">Книги не найдены по вашему запросу.</p>
}

<!-- Таблица со списком книг -->
    <table class="table m-3">
        <thead>
            <tr>
               <th>Название</th>
               <th>Автор</th>
               <th>Прочитано</th>
               <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@(item.IsRead ? "Да" : "Нет")</td>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-3">Редактировать</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary me-3 ">Удалить</a>
                        
                            @if (item.IsFavorite)
                            {
                                <a asp-action="MarkAsFavorite" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="fas fa-heart-broken"></i> Убрать из избранного
                                </a>
                            }
                            else
                            {
                                <a asp-action="MarkAsFavorite" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="fas fa-heart"></i> Добавить в избранное
                                </a>
                            }
                       
                  </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <h1></h1>
<a href="@Url.Action("Create")" class="btn btn-primary">Добавить книгу</a>
