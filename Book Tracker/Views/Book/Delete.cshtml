@model Book_Tracker.Models.Book
<div class="container">

<h1>Удалить книгу</h1>

<form asp-action="Delete">
    <div class="form-group">
            <label asp-for="Title"><label for="Title">Название книги</label></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="Author">Автор</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="IsRead">Прочитано</label>
        <select asp-for="IsRead" class="form-control">
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <div class="form-group">
            <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
        <h1></h1>
    <button type="submit" class="btn btn-primary">Удалить</button>
</form>
